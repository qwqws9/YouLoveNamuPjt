	<!-- SQL : INSERT -->
	<insert 	id="addPlanner"		parameterType="planner" >
	 	INSERT
		INTO planner(PLANNER_CODE ,USER_CODE, PLANNER_NAME , PLANNER_IMAGE, MEMBER, PRIVACY, STATUS, ISGROUP , BOARD_CODE, START_DATE , REG_DATE ) 
		VALUES	 (seq_planner_code.nextval , 2, #{plannerName:VARCHAR} , #{plannerImage:VARCHAR}, #{member}, #{privacy}, 'B',  'N' , '4', #{startDate:VARCHAR}, SYSDATE)
	 </insert>
	 
	 <insert 	id="addRoute"		parameterType="route" >
	 	INSERT
		INTO route (route_code, planner_ver, planner_code, city_name ,stay_day, city_order,  lat, lng) 
		VALUES	 (seq_route_route_no.nextval, #{plannerVer:INTEGER}, #{plannerCode:INTEGER}, #{cityName:VARCHAR} ,#{stayDay:INTEGER}, #{cityOrder:INTEGER} , #{lat:VARCHAR},#{lng:VARCHAR})
	 </insert>
	
	
</mapper>